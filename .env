# Google OAuth client credentials for Drive/Docs/Sheets access
GOOGLE_APPLICATION_CREDENTIALS=secure/credentials/oauth_client.json
# Persisted OAuth tokens (created by scripts/setupDriveOAuth.js)
GOOGLE_TOKEN_PATH=secure/credentials/token.json

# Drive upload defaults (override as needed)
FULLTEXT_DRIVE_UPLOAD=1
FULLTEXT_DRIVE_FOLDER_ID=1593sqSQhNgKE7m0noKVdSbJC_XDHtdQ3
FULLTEXT_DRIVE_SUBFOLDERS=NomuraReports
FULLTEXT_DRIVE_USE_DATE_FOLDER=0
FULLTEXT_DRIVE_ALLOW_ROOT_UPLOAD=0
FULLTEXT_DRIVE_RETRIES=3
FULLTEXT_DRIVE_FLAT=1

# Default categories for fulltext fetch (slash-delimited list)
FULLTEXT_DEFAULT_CATEGORIES=為替モーニングコメント/欧州市場コメント/米国市場コメント/マクロ・スナップショット

# Proxy settings (必要な場合のみ使用)
FULLTEXT_PROXY_SERVER=
FULLTEXT_PROXY_USERNAME=
FULLTEXT_PROXY_PASSWORD=

# Sharing options
GOOGLE_DRIVE_SHARE_ANYONE=0
GOOGLE_DRIVE_SHARE_DOMAIN=
GOOGLE_DRIVE_SHARE_ROLE=reader
GOOGLE_DRIVE_IGNORE_SHARE_ERRORS=0

# Chrome DevTools MCP settings
CHROME_EXECUTABLE_PATH=
CHROME_USER_DATA_DIR=./tmp/chrome-user-data
CHROME_HEADLESS=false
CHROME_DEVTOOLS_PORT=9222
CHROME_MCP_TIMEOUT=30000
CHROME_MCP_SCREENSHOT_QUALITY=90
